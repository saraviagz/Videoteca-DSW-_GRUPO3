<!DOCTYPE html>
<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous" />
    <script src="https://kit.fontawesome.com/c1b4dffe3e.js" crossorigin="anonymous"></script>
    <title>Dashboard</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
            overflow-x: hidden;
        }

        .main-container {
            display: flex;
            min-height: 100vh;
            width: 100%;
        }

        .sidebar {
            background-color: #f8f9fa;
            width: 250px;
            padding: 20px;
            flex-shrink: 0;
        }

            .sidebar .nav-item {
                margin-bottom: 20px;
            }

        .nav-button {
            background-color: #2c3e50;
            border: none;
            color: white;
            padding: 10px 20px;
            text-align: left;
            text-decoration: none;
            display: flex;
            align-items: center;
            font-size: 16px;
            width: 100%;
            cursor: pointer;
        }

            .nav-button i {
                margin-right: 10px;
            }

        .content-area {
            flex-grow: 1;
            padding: 20px;
        }

        .panel {
            border: 1px solid #ccc;
            padding: 20px;
            margin-bottom: 20px;
            background-color: white;
        }

        .button {
            background-color: #2c3e50;
            border: none;
            color: white;
            padding: 15px 32px;
            text-align: center;
            display: inline-block;
            font-size: 16px;
            margin: 4px 2px;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <div class="main-container">

        <!-- Sidebar -->
        <div class="sidebar">
            <nav class="nav flex-column">
                <div class="d-grid gap-2 mb-3">
                    <button class="btn btn-primary btn-lg" onclick="navigateTo('Perfil')">
                        <i class="fa-solid fa-user me-2"></i>Perfil
                    </button>
                </div>
                <div class="d-grid gap-2 mb-3">
                    <button class="btn btn-primary btn-lg" onclick="navigateTo('Reportes')">
                        <i class="fa-solid fa-sheet-plastic me-2"></i>Reportes
                    </button>
                </div>
                <div class="d-grid gap-2 mb-3">
                    <button class="btn btn-primary btn-lg" onclick="navigateTo('GestionarUsuarios')">
                        <i class="fa-solid fa-house-chimney-user me-2"></i>Gestionar Usuarios
                    </button>
                </div>
                <div class="d-grid gap-2 mb-3">
                    <button class="btn btn-primary btn-lg" onclick="navigateTo('Inventario')">
                        <i class="fa-solid fa-computer me-2"></i>Inventario
                    </button>
                </div>
                <div class="d-grid gap-2 mb-3">
                    <button class="btn btn-primary btn-lg" onclick="navigateTo('Salir')">
                        <i class="fa-solid fa-door-open me-2"></i>Salir
                    </button>
                </div>
            </nav>
        </div>
        <script>
            function navigateTo(view) {
                // Redirige a la vista correspondiente en el controlador Administrador
                window.location.href = '/Administrador/' + view;
            }
        </script>






        <!-- Content Area -->
        <div class="content-area">
            <div class="panel">
                <div class="input-group">
                    <span class="input-group-text col-2 d-flex justify-content-center align-items-center">
                        <i class="fa-regular fa-user fa-5x"></i>
                    </span>
                    <div class="ms-3">
                        <h1 class="col-11">@TempData["Nombre"]</h1>
                        <p>Administrador</p>
                        <p>@TempData["Correo"]</p>
                    </div>
                </div>
                <div class="text-end">
                    <button class="button">Cambiar contraseña</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>
</body>
</html>
