<!DOCTYPE html>
<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous" />
    <script src="https://kit.fontawesome.com/c1b4dffe3e.js" crossorigin="anonymous"></script>
    <title>Dashboard</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            min-height: 100vh;
        }

        .main-content {
            flex: 1;
            padding: 40px;
            background-color: #f8f5f8; /* Fondo de la sección principal */
        }

        .sidebar {
            background-color: #f8f9fa;
            width: 250px;
            padding: 20px;
            flex-shrink: 0;
            height: 100vh;
            position: fixed;
        }

            .sidebar .nav-item {
                margin-bottom: 20px;
                display: flex;
                align-items: center;
                gap: 10px;
            }

        .content-area {
            flex-grow: 1;
            padding: 20px;
            margin-left: 250px; /* Igual al ancho del sidebar */

        }

        .panel {
            border: 1px solid #ccc;
            padding: 20px;
            margin-bottom: 20px;
            background-color: white;
            border-radius: 5px;
        }

        .button {
            background-color: #2c3e50;
            border: none;
            color: white;
            padding: 15px 32px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin: 4px 2px;
            cursor: pointer;
            border-radius: 4px;
        }

        .button-group {
            padding: 20px;
            display: flex;
            gap: 10px;
            flex-wrap: wrap;
        }

        .equipos-container {
            width: 100%;
            max-width: 600px;
            margin: 0 auto;
        }

            .equipos-container h2 {
                font-size: 20px;
                color: #333;
                text-align: left;
                margin-bottom: 20px;
            }

        .equipo-item {
            display: flex;
            align-items: center;
            justify-content: space-between;
            background-color: #d9d9d9;
            padding: 15px;
            border-radius: 10px;
            margin-bottom: 10px;
        }

            .equipo-item i {
                font-size: 24px;
                color: #5a5a5a;
                margin-right: 10px;
            }

        .equipo-info {
            flex-grow: 1;
            display: flex;
            flex-direction: column;
        }

            .equipo-info .nombre {
                font-weight: bold;
                font-size: 16px;
                color: #333;
            }

            .equipo-info .ubicacion {
                font-size: 14px;
                color: #777;
            }

    </style>
</head>
<body>
    <div class="main-container">
        <!-- Sidebar -->
        <div class="sidebar">
            <nav class="nav flex-column">
                <div class="d-grid gap-2 mb-3">
                    <button class="btn btn-primary btn-lg" onclick="navigateTo('Perfil')">
                        <!-- VIEW -->
                        <i class="fa-solid fa-user me-2"></i>Perfil                             <!-- NAME BUTTON -->
                    </button>
                </div>
                <div class="d-grid gap-2 mb-3">
                    <button class="btn btn-primary btn-lg" onclick="navigateTo('ReservaEquipo')">
                        <!-- VIEW -->
                        <i class="fa-solid fa-calendar-check me-2"></i>Reservar Equipo              <!-- NAME BUTTON -->
                    </button>
                </div>
                <div class="d-grid gap-2 mb-3">
                    <button class="btn btn-primary btn-lg" onclick="navigateTo('Historial')">
                        <i class="fa-solid fa-clock-rotate-left me-2"></i>Historial
                    </button>
                </div>
                <div class="d-grid gap-2 mb-3">
                    <button class="btn btn-primary btn-lg" onclick="navigateTo('Salir')">
                        <i class="fa-solid fa-door-open me-2"></i>Salir
                    </button>
                </div>
            </nav>
        </div>
        <script>
            function navigateTo(view) {
                // Redirige a la vista correspondiente en el controlador Estudiante
                window.location.href = '/Estudiante/' + view;
            }
        </script>

        <!-- Content Area -->
        <!-- Contenido principal -->
        <div class="content-area">
            <div class="equipos-container">
                <h2>Equipos libres</h2>
                <!-- Lista de equipos -->
                <div id="equipos-grid">
                    <!-- Los elementos se generarán aquí -->
                </div>
            </div>
        </div>

        <script>
            // Simulación de datos de la base de datos en una matriz
            const equipos = [
                ["Equipo 601", "Laboratorio 6"],
                ["Equipo 605", "Laboratorio 6"],
                ["Equipo 601", "Laboratorio 6"],
                ["Equipo 605", "Laboratorio 6"]
            ];

            // Función para renderizar la lista de equipos
            function renderEquipos() {
                const equiposGrid = document.getElementById('equipos-grid');
                equipos.forEach(equipo => {
                    const equipoItem = document.createElement('div');
                    equipoItem.className = 'equipo-item';
                    equipoItem.innerHTML = `
                                    <i class="fas fa-desktop"></i>
                                    <div class="equipo-info">
                                                <span class="nombre">${equipo[0]}</span>
                                                <span class="ubicacion">${equipo[1]}</span>
                                            </div>
                                        `;
                    equiposGrid.appendChild(equipoItem);
                });
            }

            // Llamada a la función para mostrar los equipos
            renderEquipos();
        </script>




        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>
</body>
</html>