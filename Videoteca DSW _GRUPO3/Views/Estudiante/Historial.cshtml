<!DOCTYPE html>
<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous" />
    <script src="https://kit.fontawesome.com/c1b4dffe3e.js" crossorigin="anonymous"></script>
    <title>Dashboard</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            min-height: 100vh;
        }

        .main-content {
            flex: 1;
            padding: 40px;
            background-color: #f8f5f8;
        }

        .sidebar {
            background-color: #f8f9fa;
            width: 250px;
            padding: 20px;
            flex-shrink: 0;
            height: 100vh;
            position: fixed;
        }

            .sidebar .nav-item {
                margin-bottom: 20px;
                display: flex;
                align-items: center;
                gap: 10px;
            }

        .content-area {
            flex-grow: 1;
            padding: 20px;
            margin-left: 250px;
        }

        .equipos-container {
            width: 100%;
            max-width: 600px;
            margin: 0 auto;
        }

            .equipos-container h2 {
                font-size: 20px;
                color: #333;
                text-align: left;
                margin-bottom: 20px;
            }

        .equipo-item {
            display: flex;
            justify-content: space-between;
            background-color: #d9d9d9;
            padding: 15px;
            border-radius: 10px;
            margin-bottom: 10px;
        }

        .equipo-column {
            display: flex;
            flex-direction: column;
            flex: 1;
            margin-left: 10px;
        }

        .nombre {
            font-weight: bold;
            font-size: 16px;
            color: #333;
        }

        .detalle {
            font-size: 14px;
            color: #555;
        }

        .equipo-icono {
            font-size: 24px;
            color: #5a5a5a;
        }

        .equipo-item .equipo-column:not(:last-child) {
            margin-right: 20px; /* Espacio entre columnas */
        }
    </style>
</head>
<body>
    <div class="main-container">
        <div class="sidebar">
            <nav class="nav flex-column">
                <div class="d-grid gap-2 mb-3">
                    <button class="btn btn-primary btn-lg" onclick="navigateTo('Perfil')">
                        <i class="fa-solid fa-user me-2"></i>Perfil
                    </button>
                </div>
                <div class="d-grid gap-2 mb-3">
                    <button class="btn btn-primary btn-lg" onclick="navigateTo('ReservaEquipo')">
                        <i class="fa-solid fa-calendar-check me-2"></i>Reservar Equipo
                    </button>
                </div>
                <div class="d-grid gap-2 mb-3">
                    <button class="btn btn-primary btn-lg" onclick="navigateTo('Historial')">
                        <i class="fa-solid fa-clock-rotate-left me-2"></i>Historial
                    </button>
                </div>
                <div class="d-grid gap-2 mb-3">
                    <button class="btn btn-primary btn-lg" onclick="navigateTo('Salir')">
                        <i class="fa-solid fa-door-open me-2"></i>Salir
                    </button>
                </div>
            </nav>
        </div>

        <script>
            function navigateTo(view) {
                window.location.href = '/Estudiante/' + view;
                        }
        </script>

        <div class="content-area">
            <div class="equipos-container">
                <h2>Préstamos realizados</h2>
                <div id="equipos-grid"></div>
            </div>
        </div>

        <script>
                    const prestamos = [
            {
                equipo: "Equipo 601",
                laboratorio: "Laboratorio 6",
                fecha: "20/4/2025",
                inicio: "3:40 p.m.",
                estado: "Apurado",
                duracion: "1h"
                        },
            {
                equipo: "Equipo 605",
                laboratorio: "Laboratorio 6",
                fecha: "20/5/2025",
                inicio: "3:40 p.m.",
                estado: "Apurado",
                duracion: "1h"
                        },

                        {
                            equipo: "Equipo 609",
                            laboratorio: "Laboratorio 6",
                            fecha: "22/4/2025",
                            inicio: "3:40 p.m.",
                estado: "Apurado",
                duracion: "1h"
            },
                        {
                equipo: "Equipo 611",
                laboratorio: "Laboratorio 6",
                    fecha: "2/4/2025",
                            inicio: "3:40 p.m.",
                            estado: "Apurado",
                            duracion: "1h"
                        },
                         {
                equipo: "Equipo 618",
                laboratorio: "Laboratorio 6",
                    fecha: "1/4/2025",
                            inicio: "5:40 p.m.",
                            estado: "Apurado",
                            duracion: "2h"
                        },

                         {
                equipo: "Equipo 612",
                laboratorio: "Laboratorio 6",
                    fecha: "1/4/2025",
                            inicio: "5:40 p.m.",
                            estado: "Apurado",
                            duracion: "2h"
                        },

                         {
                equipo: "Equipo 613",
                laboratorio: "Laboratorio 6",
                    fecha: "2/4/2025",
                            inicio: "5:40 p.m.",
                            estado: "Apurado",
                            duracion: "2h"
                        }


                    ];

                    function renderPrestamos() {
                        const equiposGrid = document.getElementById('equipos-grid');
                        prestamos.forEach(prestamo => {
                            const equipoItem = document.createElement('div');
                            equipoItem.className = 'equipo-item';
                            equipoItem.innerHTML = `
                                <i class="fas fa-desktop equipo-icono"></i>
                                <div class="equipo-column">
                                    <span class="nombre">${prestamo.equipo}</span>
                                    <span class="detalle">${prestamo.laboratorio}</span>
                                </div>
                                <div class="equipo-column">
                                    <span class="detalle">Fecha: ${prestamo.fecha}</span>
                                    <span class="detalle">Inicio: ${prestamo.inicio}</span>
                                </div>
                                <div class="equipo-column">
                                    <span class="detalle">Estado: ${prestamo.estado}</span>
                                    <span class="detalle">Duración: ${prestamo.duracion}</span>
                                </div>
                            `;
                            equiposGrid.appendChild(equipoItem);
                        });
                    }

                    renderPrestamos();
        </script>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>
</body>
</html>
