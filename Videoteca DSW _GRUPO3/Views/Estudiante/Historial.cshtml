<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Equipos Libres</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <style>
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            font-family: Arial, sans-serif;
            background-color: #f5f0f5; /* Color de fondo similar al de la imagen */
            display: flex;
            height: 100vh;
        }

        .sidebar {
            width: 80px;
            background-color: #d7c0d7; /* Color de fondo de la barra lateral */
            display: flex;
            flex-direction: column;
            align-items: center;
            padding-top: 20px;
            gap: 20px;
        }

            .sidebar a {
                text-decoration: none;
                color: #5a5a5a;
                font-size: 16px;
                display: flex;
                flex-direction: column;
                align-items: center;
                transition: color 0.3s;
            }

                .sidebar a i {
                    font-size: 24px;
                }

                .sidebar a:hover {
                    color: #333;
                }

        .main-content {
            flex: 1;
            padding: 40px;
            background-color: #f8f5f8; /* Fondo de la sección principal */
        }

        .equipos-container {
            width: 100%;
            max-width: 600px;
            margin: 0 auto;
        }

            .equipos-container h2 {
                font-size: 20px;
                color: #333;
                text-align: left;
                margin-bottom: 20px;
            }

        .equipo-item {
            display: flex;
            align-items: center;
            justify-content: space-between;
            background-color: #d9d9d9;
            padding: 15px;
            border-radius: 10px;
            margin-bottom: 10px;
        }

            .equipo-item i {
                font-size: 24px;
                color: #5a5a5a;
                margin-right: 10px;
            }

        .equipo-info {
            flex-grow: 1;
            display: flex;
            flex-direction: column;
        }

            .equipo-info .nombre {
                font-weight: bold;
                font-size: 16px;
                color: #333;
            }

            .equipo-info .ubicacion {
                font-size: 14px;
                color: #777;
            }
    </style>
</head>
<body>
    <!-- Barra lateral -->
    <div class="sidebar">
        <a href="#"><i class="fas fa-user"></i><span>Perfil</span></a>
        <a href="#"><i class="fas fa-calendar-alt"></i><span>Reservar</span></a>
        <a href="#"><i class="fas fa-history"></i><span>Historial</span></a>
        <a href="#"><i class="fas fa-sign-out-alt"></i><span>Salir</span></a>
    </div>

    <!-- Contenido principal -->
    <div class="main-content">
        <div class="equipos-container">
            <h2>Equipos libres</h2>
            <!-- Lista de equipos -->
            <div id="equipos-grid">
                <!-- Los elementos se generarán aquí -->
            </div>
        </div>
    </div>

    <script>
        // Simulación de datos de la base de datos en una matriz
        const equipos = [
            ["Equipo 601", "Laboratorio 6"],
            ["Equipo 605", "Laboratorio 6"],
            ["Equipo 601", "Laboratorio 6"],
            ["Equipo 605", "Laboratorio 6"]
                ];

        // Función para renderizar la lista de equipos
                function renderEquipos() {
            const equiposGrid = document.getElementById('equipos-grid');
            equipos.forEach(equipo => {
                const equipoItem = document.createElement('div');
                equipoItem.className = 'equipo-item';
                equipoItem.innerHTML = `
                    <i class="fas fa-desktop"></i>
                    <div class="equipo-info">
                                <span class="nombre">${equipo[0]}</span>
                                <span class="ubicacion">${equipo[1]}</span>
                            </div>
                        `;
                        equiposGrid.appendChild(equipoItem);
                    });
                }

        // Llamada a la función para mostrar los equipos
                renderEquipos();
    </script>
</body>
</html>
