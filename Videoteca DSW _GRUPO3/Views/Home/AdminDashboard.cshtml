<!DOCTYPE html>
<html>
<head>
    <link href="https://cdn.jsdeliv.r.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous" />
    <script src="https://kit.fontawesome.com/c1b4dffe3e.js" crossorigin="anonymous"></script>
    <title>Dashboard</title>
    <style>

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
            overflow-x: hidden; /* Evita el scroll horizontal */
        }

        .container {
            display: flex;
            width: 100vw; /* Asegura que cubra el ancho total de la ventana */
        }

        .sidebar {
            background-color: #f8f9fa; /* Color de fondo de la barra lateral */
            height: 100vh; /* Altura completa de la pantalla */
            padding: 20px;
        }

            .sidebar .nav-item {
                margin-bottom: 20px;
            }

                .sidebar .nav-item h4 {
                    display: inline-block;
                    margin-left: 10px;
                }

        .panel {
            border: 1px solid #ccc;
            padding: 20px;
            margin-bottom: 20px;
        }

        .button {
            background-color: #2c3e50;
            border: none;
            color: white;
            padding: 15px 32px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin: 4px 2px;
            cursor: pointer;
        }
    </style>
</head>
<body>

    <div class="container">
        <div class="row">
            <!-- Barra lateral -->
            <div class="col-2 sidebar">
                <nav class="nav flex-column">
                    <div class="nav-item">
                        <span><i class="fa-solid fa-user"></i></span>
                        <h6>Perfil</h6>
                    </div>
                    <div class="nav-item">
                        <span><i class="fa-solid fa-sheet-plastic"></i></span>
                        <h6>Reportes</h6>
                    </div>
                    <div class="nav-item">
                        <span><i class="fa-solid fa-house-chimney-user"></i></span>
                        <h6>Gestionar Usuarios</h6>
                    </div>
                    <div class="nav-item">
                        <span><i class="fa-solid fa-computer"></i></span>
                        <h6>Inventario</h6>
                    </div>
                    <div class="nav-item">
                        <span><i class="fa-solid fa-book"></i></span>
                        <h6>Historial</h6>
                    </div>
                    <div class="nav-item">
                        <span><i class="fa-solid fa-door-open"></i></span>
                        <h6>Salir</h6>
                    </div>
                </nav>
            </div>
        </div>
    </div>

    <div class="panel col-10">
        <div class="input-group">
            <span class="input-group-text col-2 d-flex justify-content-center align-items-center">
                <i class="fa-regular fa-user fa-5x"></i>
            </span>
            <div class="ms-3">
                <h1 class="col-11">@TempData["Nombre"]</h1>
                <p>Administrador</p>
                <p>@TempData["Correo"]</p>
            </div>
        </div>

        <div class="text-end">
            <button class="button">Cambiar contraseña</button>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>
</body>
</html>