@model Videoteca_DSW__GRUPO3.Models.Equipo

@{
    ViewData["Title"] = "Detalles de Equipo";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Detalles del Equipo</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            line-height: 1.6;
            color: #333;
            background-color: #f0f2f5;
            margin: 0;
            padding: 20px;
            min-height: 100vh;
        }

        .container {
            width: 100%;
            max-width: 600px;
            background-color: #fff;
            padding: 30px;
            border-radius: 12px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        }

        h2 {
            color: #2c3e50;
            margin-bottom: 25px;
            text-align: center;
            font-size: 24px;
            border-bottom: 2px solid #3498db;
            padding-bottom: 10px;
        }

        .details {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 15px 20px;
            align-items: baseline;
        }

            .details dt {
                font-weight: bold;
                color: #3498db;
                text-align: right;
                padding-right: 10px;
            }

            .details dd {
                margin: 0;
                background-color: #f8f9fa;
                padding: 5px 10px;
                border-radius: 4px;
            }

        .btn-back {
            display: block;
            width: 200px;
            margin: 30px auto 0;
            padding: 12px 20px;
            background-color: #3498db;
            color: #fff;
            text-decoration: none;
            border-radius: 25px;
            transition: background-color 0.3s, transform 0.2s;
            text-align: center;
            font-weight: bold;
        }

            .btn-back:hover {
                background-color: #2980b9;
                transform: translateY(-2px);
            }
    </style>
</head>
<body>
    <div class="container">
        <h2>Detalles del Equipo</h2>
        <dl class="details">
            <dt>Inventario:</dt>
            <dd>@Model.id_inventario</dd>

            <dt>Administrador:</dt>
            <dd>@Model.id_admin</dd>

            <dt>ID:</dt>
            <dd>@Model.id_equipo</dd>

            <dt>Código de Pantalla:</dt>
            <dd>@Model.codigo_pantalla</dd>

            <dt>Código de CPU:</dt>
            <dd>@Model.codigo_cpu</dd>

            <dt>Código de Teclado:</dt>
            <dd>@Model.codigo_teclado</dd>

            <dt>Código de Mouse:</dt>
            <dd>@Model.codigo_mouse</dd>

            <dt>Número de Laboratorio:</dt>
            <dd>@Model.num_labo</dd>

            <dt>Código en Laboratorio:</dt>
            <dd>@Model.codigo_en_labo</dd>

            <dt>Estado:</dt>
            <dd>@Model.estado</dd>
        </dl>
        <a href="/Equipo/Index" class="btn-back">Regresar</a>
    </div>
</body>
</html>
