@model IEnumerable<Videoteca_DSW__GRUPO3.Models.Equipo>

@{
    ViewData["Title"] = "Inventario de Equipos";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inventario de Equipos</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f5f6fa;
            margin: 0;
            padding: 20px;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 30px;
        }

        .title {
            font-size: 24px;
            color: #2c3e50;
            margin: 0;
        }

        .actions {
            display: flex;
            gap: 10px;
        }

        .btn {
            padding: 8px 20px;
            border-radius: 6px;
            border: none;
            cursor: pointer;
            font-weight: 500;
            text-decoration: none;
            transition: all 0.3s ease;
        }

            .btn:hover {
                color: white;
            }

        .btn-search {
            background-color: #2c3e50;
            color: white;
        }

        .btn-add {
            background-color: #3498db;
            color: white;
        }

        .equipment-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 20px;
            margin-top: 20px;
        }

        .equipment-card {
            background: white;
            border-radius: 10px;
            padding: 20px;
            display: flex;
            align-items: center;
            gap: 15px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
            transition: transform 0.2s ease;
        }

            .equipment-card:hover {
                transform: translateY(-2px);
            }

        .equipment-icon {
            width: 40px;
            height: 40px;
            background-color: #f0f2f5;
            border-radius: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

            .equipment-icon svg {
                width: 24px;
                height: 24px;
                color: #2c3e50;
            }

        .equipment-info {
            flex-grow: 1;
        }

        .equipment-title {
            font-size: 16px;
            font-weight: 600;
            color: #2c3e50;
            margin: 0 0 5px 0;
        }

        .equipment-status {
            font-size: 14px;
            color: #666;
        }

        .status-libre {
            color: #27ae60;
        }

        .status-prestado {
            color: #e67e22;
        }

        .status-inhabilitado {
            color: #e74c3c;
        }

        .card-actions {
            display: flex;
            gap: 5px;
            margin-top: 10px;
        }

        .action-btn {
            padding: 5px 10px;
            border-radius: 4px;
            font-size: 12px;
            text-decoration: none;
            color: white;
        }

            .action-btn:hover {
                color: white;
            }

        .btn-view {
            background-color: #2ecc71;
        }

        .btn-edit {
            background-color: #3498db;
        }

        .btn-delete {
            background-color: #e74c3c;
        }

        /* Estilos para el modal */
        .modal {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            z-index: 1000;
        }

        .modal-content {
            position: relative;
            background-color: #c1f0d4;
            margin: 15% auto;
            padding: 20px;
            width: 90%;
            max-width: 500px;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .close {
            position: absolute;
            right: 10px;
            top: 10px;
            font-size: 24px;
            cursor: pointer;
            color: #333;
        }

        .modal-header {
            margin-bottom: 20px;
        }

            .modal-header h2 {
                margin: 0;
                color: #333;
                font-size: 1.5rem;
            }

        .search-form {
            display: flex;
            flex-direction: column;
            gap: 15px;
        }

        .form-group {
            display: flex;
            flex-direction: column;
            gap: 5px;
        }

            .form-group label {
                font-weight: 500;
                color: #333;
            }

            .form-group select,
            .form-group input {
                padding: 8px;
                border: 1px solid #ccc;
                border-radius: 4px;
                font-size: 14px;
            }

        .modal-buttons {
            display: flex;
            justify-content: flex-end;
            gap: 10px;
            margin-top: 20px;
        }

        .modal-btn {
            padding: 8px 20px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-weight: 500;
            transition: background-color 0.3s;
        }

        .btn-accept {
            background-color: #2c3e50;
            color: white;
        }

        .btn-cancel {
            background-color: #7f8c8d;
            color: white;
        }

        .modal-btn:hover {
            opacity: 0.9;
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="header">
            <h1 class="title">Inventario de Equipos</h1>
            <div class="actions">
                <a href="#" class="btn btn-search">Buscar</a>
                <a href="/Equipo/Create" class="btn btn-add">Agregar</a>
            </div>
        </div>

        <div class="equipment-grid">
            @foreach (var equipo in Model)
            {
                <div class="equipment-card">
                    <div class="equipment-icon">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                        </svg>
                    </div>
                    <div class="equipment-info">
                        <h3 class="equipment-title">Equipo @equipo.nombre_equipo</h3>
                        <p class="equipment-status @($"status-{equipo.estado.ToLower()}")">
                            Estado: @equipo.estado
                        </p>
                        <p class="equipment-status">
                            Laboratorio: @equipo.num_labo
                        </p>
                        <div class="card-actions">
                            <a href="/Equipo/Details/@equipo.id_equipo" class="action-btn btn-view">Ver</a>
                            <a href="/Equipo/Edit/@equipo.id_equipo" class="action-btn btn-edit">Editar</a>
                            <a href="/Equipo/Delete/@equipo.id_equipo" class="action-btn btn-delete">Eliminar</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- Modal de búsqueda -->
    <div id="searchModal" class="modal">
        <div class="modal-content">
            <span class="close">&times;</span>
            <div class="modal-header">
                <h2>Búsqueda</h2>
            </div>
            <form class="search-form" id="searchForm">
                <div class="form-group">
                    <label for="searchType">Buscar por:</label>
                    <select id="searchType" name="searchType">
                        <option value="nombre">Nombre</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="searchTerm">Buscar:</label>
                    <input type="text" id="searchTerm" name="searchTerm" placeholder="E010">
                </div>
                <div class="modal-buttons">
                    <button type="submit" class="modal-btn btn-accept">Aceptar</button>
                    <button type="button" class="modal-btn btn-cancel" onclick="closeModal()">Cancelar</button>
                </div>
            </form>
        </div>
    </div>

    <script>
        // Definir variables a usar
        const modal = document.getElementById('searchModal');
        const searchBtn = document.querySelector('.btn-search');
        const closeBtn = document.querySelector('.close');
        const cancelBtn = document.querySelector('.btn-cancel');
        const searchForm = document.getElementById('searchForm');

        // Abrir modal
        searchBtn.onclick = function () {
            modal.style.display = 'block';
        }

        // Cerrar modal
        function closeModal() {
            modal.style.display = 'none';
        }

        closeBtn.onclick = closeModal;

        // Cerrar modal si se hace clic fuera de él
        window.onclick = function (event) {
            if (event.target == modal) {
                closeModal();
            }
        }

        // Manejar envío del formulario
        searchForm.onsubmit = function (e) {
            e.preventDefault();
            const searchType = document.getElementById('searchType').value;
            const searchTerm = document.getElementById('searchTerm').value;

            // Redirigir a la acción de búsqueda
            window.location.href = `/Equipo/Search?type=${searchType}&term=${searchTerm}`;
        }
    </script>
</body>
</html>